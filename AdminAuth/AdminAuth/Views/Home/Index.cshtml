@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h2>Hello user!</h2>
    <div class="d-grid gap-2 mx-auto col-4">
        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="SignUp">Sign Up</a>
        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="SignIn">Sign In</a>
    </div>
</div>

<script>
    $(document).ready(function () {
        var message = '@TempData["ToastrMessage"]';
        var type = '@TempData["ToastrType"]';
        if (message !== "") {
            toastr.options = {
                progressBar: true,
                positionClass: 'toast-top-right'
            };
            toastr[type](message);
        }
    });
</script>