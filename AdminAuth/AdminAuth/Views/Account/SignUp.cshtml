<h2 class="text-center">Sign Up</h2>
<div class="container col-6">
    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { @id = "SignUp", @class = "form-control bg-light shadow-lg" }))
    {
        <div class="row mb-3 mt-3">
            <label class="col-2"><strong>Name<span class="text-danger">*</span></strong></label>
            <div class="col-10">
                @Html.TextBox("Name", "", new { @class = "form-control", @id = "Name", @oninput = "this.value=(this.value.match('[A-Za-z0-9_]+'))", maxlength = 50 })
                <label class="error text-danger" for="Name"></label>
            </div>            
        </div>
        <div class="row mb-3">
            <label class="col-2"><strong>Email<span class="text-danger">*</span></strong></label>
            <div class="col-10">
                @Html.TextBox("Email", "", new { @class = "form-control", @id = "Email", @oninput = "this.value=(this.value.match('[A-Za-z0-9_]+'))", maxlength = 50 })
                <label class="error text-danger" for="Email"></label>
            </div>            
        </div>
        <div class="row mb-3">
            <label class="col-2"><strong>Password<span class="text-danger">*</span></strong></label>
            <div class="col-10">
                @Html.TextBox("Password", "", new { @class = "form-control", @id = "Password", @oninput = "this.value=(this.value.match('[A-Za-z0-9_]+'))", maxlength = 50 })
                <label class="error text-danger" for="Password"></label>
            </div>            
        </div>
        <div class="row mb-3">
            <label class="col-2"><strong>Confirm Password<span class="text-danger">*</span></strong></label>
            <div class="col-10">
                @Html.TextBox("CPassword", "", new { @class = "form-control", @id = "CPassword", @oninput = "this.value=(this.value.match('[A-Za-z0-9_]+'))", maxlength = 50 })
                <label class="error text-danger" for="CPassword"></label>
            </div>            
        </div>
        <div class="row mb-3">
            <label class="col-2"><strong>Phone<span class="text-danger">*</span></strong></label>
            <div class="col-10">
                @Html.TextBox("Phone", "", new { @class = "form-control", @id = "Phone", @oninput = "this.value=(this.value.match('[A-Za-z0-9_]+'))", maxlength = 50 })
                <label class="error text-danger" for="Phone"></label>
            </div>            
        </div>
        <div class="row mb-3">
            <label class="col-2"><strong>Roles<span class="text-danger">*</span></strong></label>
            <div class="col-10">
                @Html.DropDownList("Role", new SelectList(GetRoles(), "Value", "Text"), "Select", new { id = "Role", @class = "form-control" })
                <label class="error text-danger" for="Role"></label>
            </div>
        </div>
        <div class="form-group text-center mt-2 mb-3">
            <button type="submit" class="btn btn-primary col-3 text-center" id="submit">Sign Up</button>
        </div>
    }
</div>

    @functions {
    public static List<SelectListItem> GetRoles()
    {
        return new List<SelectListItem>
        {
            new SelectListItem { Value = "Admin", Text = "Admin" },
            new SelectListItem { Value = "Manager", Text = "Manager" },
            new SelectListItem { Value = "Team Member", Text = "Team Member" },
        };
    }
    }