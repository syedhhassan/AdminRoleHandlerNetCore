@model Admin.Core.Models.UserModel;
<h2 class="text-center">Edit Employee</h2>
<div class="container col-6">
    @using (Html.BeginForm("Update", "Account", FormMethod.Post, new { @id = "Update", @class = "form-control bg-light shadow-lg" }))
    {
        <div class="row mb-3 mt-3">
            <label class="col-2 ml-2"><strong>Name<span class="text-danger">*</span></strong></label>
            <div class="col-10 mr-2">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name", @oninput = "this.value=(this.value.match('[A-Z a-z]+'))", maxlength = 50 })
                <label class="error text-danger" for="Name"></label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-2 ml-2"><strong>Email<span class="text-danger">*</span></strong></label>
            <div class="col-10 mr-2">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "Email", maxlength = 50, @readonly = "readonly" })
                <label class="error text-danger" for="Email"></label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-2 ml-2"><strong>Phone<span class="text-danger">*</span></strong></label>
            <div class="col-10 mr-2">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @id = "Phone", @oninput = "this.value=(this.value.match('[0-9-]+'))", maxlength = 12 })
                <label class="error text-danger" for="Phone"></label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-2 ml-2"><strong>Role<span class="text-danger">*</span></strong></label>
            <div class="col-10 mr-2">
                @Html.DropDownList("Role", new SelectList(GetRoles(), "Value", "Text"), "Select", new { id = "Role", @class = "form-control" })
                <label class="error text-danger" for="Role"></label>
            </div>
        </div>
        <div id="AdminPass" style="display:none">
            <div class="row mb-3">
                <label class="col-2 ml-2"><strong>Admin Password<span class="text-danger">*</span></strong></label>
                <div class="col-10 mr-2">
                    @Html.TextBox("APassword", "", new { @class = "form-control", @id = "APassword", @oninput = "this.value=(this.value.match('[A-Za-z0-9_]+'))", maxlength = 50, @type = "password" })
                    @Html.CheckBox("ShowAPass", new { @class = "form-check-input", @id = "ShowAPass" })
                    <span class="form-check-label">Show password</span>
                    <label class="error text-danger col-12" for="Password"></label>
                </div>
            </div>
        </div>
        <div id="ManagerPass" style="display:none">
            <div class="row mb-3">
                <label class="col-2 ml-2"><strong>Manager Password<span class="text-danger">*</span></strong></label>
                <div class="col-10 mr-2">
                    @Html.TextBox("MPassword", "", new { @class = "form-control", @id = "MPassword", @oninput = "this.value=(this.value.match('[A-Za-z0-9_]+'))", maxlength = 50, @type = "password" })
                    @Html.CheckBox("ShowMPass", new { @class = "form-check-input", @id = "ShowMPass" })
                    <span class="form-check-label">Show password</span>
                    <br />
                    <label class="error text-danger" for="Password"></label>
                </div>
            </div>
        </div>
        <div id="ManagerName" style="display:none">
            <div class="row mb-3">
                <label class="col-2"><strong>Manager<span class="text-danger">*</span></strong></label>
                <div class="col-10">
                    @Html.DropDownList("Manager", new SelectList((IEnumerable<string>)TempData["Managers"]), "Select", new { id = "Role", @class = "form-control" })
                    <label class="error text-danger" for="Role"></label>
                </div>
            </div>
        </div>
        <div class="form-group text-center mt-2 mb-3">
            <button type="submit" class="btn btn-primary col-3 text-center" id="submit">Update</button>
        </div>
    }
</div>

@functions {
    public static List<SelectListItem> GetRoles()
    {
        return new List<SelectListItem>
            {
                new SelectListItem { Value = "Admin", Text = "Admin" },
                new SelectListItem { Value = "Manager", Text = "Manager" },
                new SelectListItem { Value = "Team Member", Text = "Team Member" },
            };
    }
    }
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Phone').mask('000-0000-000');

            $('#Role').on('click', function () {
                if ($('#Role').val() == "Admin") {
                    $('#APassword').css("display", "block")
                    $('#APassword').css("display", "none")
                    $('#ManagerName').css("display", "none")
                }
                else if ($('#Role').val() == "Manager") {
                    $('#APassword').css("display", "none")
                    $('#APassword').css("display", "block")
                    $('#ManagerName').css("display", "none")
                }
                else {
                    $('#APassword').css("display", "none")
                    $('#APassword').css("display", "none")
                    $('#ManagerName').css("display", "block")
                }

            });

            $('#ShowPass').on('click', function () {
                var x = document.getElementById("Password");
                if (x.type === "password") {
                    x.type = "text";
                }
                else {
                    x.type = "password";
                }
            });

            $('#ShowAPass').on('click', function () {
                var x = document.getElementById("APassword");
                if (x.type === "password") {
                    x.type = "text";
                }
                else {
                    x.type = "password";
                }
            });

            $('#ShowMPass').on('click', function () {
                var x = document.getElementById("MPassword");
                if (x.type === "password") {
                    x.type = "text";
                }
                else {
                    x.type = "password";
                }
            });

            $("#Update").validate({
                rules: {
                    Name: {
                        required: true
                    },
                    Email: {
                        required: true,
                        email: true
                    },
                    Role: {
                        required: true
                    },
                    Manager: {
                        required: true
                    },
                    APassword: {
                        required: true,
                        equalTo: "Admin"
                    },
                    MPassword: {
                        required: true,
                        equalTo: "Manager"
                    }
                },
                messages: {
                    Name: {
                        required: "Name is a required field",
                    },
                    Email: {
                        required: "Email is a required field",
                        email: "Please enter a valid email"
                    },
                    Role: {
                        required: "Select a role"
                    },
                    Manager: {
                        required: "Select your manager"
                    },
                    APassword: {
                        required: "Please enter admin password",
                        equalTo: "Password incorrect"
                    },
                    MPassword: {
                        required: "Please enter manager password",
                        equalTo: "Password incorrect"
                    }
                }
            });
        });

    </script>
    <partial name="_ValidationScriptsPartial" />
}